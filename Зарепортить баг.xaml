<Window x:Class="Индивидуальный_Проект.Зарепортить_баг"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Индивидуальный_Проект"
        mc:Ignorable="d"
        Title="Зарепортить баг" Height="300" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Тема ошибки:" FontWeight="Bold" />
            <TextBox x:Name="TemaTextBox" MaxLength="20" />
            <TextBlock Text="Описание:" FontWeight="Bold" Margin="0,10,0,0" />
            <TextBox x:Name="OpisanieTextBox" MaxLength="50" Height="100" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
            <Button Content="Отправить" Margin="0,20,0,0" Click="OtpravitButton_Click" />
        </StackPanel>
    </Grid>
</Window>
