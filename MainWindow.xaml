<Window x:Class="Индивидуальный_Проект.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="250" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Имя пользователя" />
            <TextBox x:Name="txtUsername" />
            <TextBlock Text="Пароль" />
            <PasswordBox x:Name="txtPassword" />
            <Button x:Name="btnLogin" Content="Войти" Click="btnLogin_Click" Margin="0,10,0,0" />
            <TextBlock Text="Нет учётной записи?" Margin="0,10,0,0" />
            <Button x:Name="btnRegister" Content="Зарегистрироваться" Click="btnRegister_Click" />
        </StackPanel>
    </Grid>
</Window>
