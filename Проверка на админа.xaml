<Window x:Class="Индивидуальный_Проект.Проверка_на_админа"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Индивидуальный_Проект"
        mc:Ignorable="d"
        Title="Подтверждение" Height="150" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Подтвердите, что вы админ" TextAlignment="Center" FontWeight="Bold" Margin="0,0,0,10" />
            <PasswordBox x:Name="PasswordBox" />
            <Button x:Name="ConfirmButton" Content="Подтвердить" Click="ConfirmButton_Click" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>