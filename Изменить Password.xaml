<Window x:Class="Индивидуальный_Проект.Изменение_Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Индивидуальный_Проект"
        mc:Ignorable="d"
        Title="Изменение Password" Height="250" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введите текущий пароль:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtCurrentPassword" Margin="0,0,0,10"/>
            <TextBlock Text="Введите новый пароль:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtNewPassword" Margin="0,0,0,10"/>
            <Button x:Name="btnUpdate" Content="Обновить" Click="btnUpdate_Click" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>
